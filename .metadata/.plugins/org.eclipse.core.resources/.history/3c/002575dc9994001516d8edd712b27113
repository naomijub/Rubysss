POP_SIZE = 70
GENE_SIZE = 8
MUTATION_RATE = 0.3
CROSSOVER = 0.7

class Chromosome
  @gene 
  @geneAux
  @fitness

  def initialize
    @gene = Array.new(POP_SIZE)
    @geneAux = Array.new(POP_SIZE)
    @fitness = Array.new(POP_SIZE)
    for i in 0 ... POP_SIZE
      genome = Array.new(GENE_SIZE)
      for j in 0 ... GENE_SIZE
        genome[j] = rand(GENE_SIZE * (j+1)) % GENE_SIZE
      end
      @gene[i] = genome.map {|j| j.to_s }.join
      @fitness[i] = 0
      #puts @gene[i]  
    end
  end
  
  def fitness
    for i in 0 ... POP_SIZE
      fit = 0
      for j in 0 ... GENE_SIZE
        fit = fit - (j - @gene[i][j].to_i)**2
        puts fit
      end
    end
  end
  
  
end

pop = Chromosome.new